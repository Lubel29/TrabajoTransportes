<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class=" text-end"> Hola {{persona}} ! <a class="btn btn-dark" href="/admin/login/logout">Cerrar sesi√≥n <i
                    class="fas fa-sign-out-alt"></i></a></p>
    </div>



    <div class="row">
        <div class="col-7">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-sucess" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Numero de embarque</th>
                <th scope="col">Fecha de salida y arribo</th>
                <th scope="col">Hora Salida</th>
                <th scope="col">Hora Arribo</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {{#each novedades}}
            <tr>
                <th scope="row">{{numero}}</th>
                <td>{{fecha}}</td>
                <td>{{salida}}</td>
                <td>{{arribo}}</td>
                <td class="text-end">
                    <a class="btn btn-secondary" href=""><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <a class="btn btn-secondary" href=""><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
            {{/each}}
            
        </tbody>
    </table>
</div>